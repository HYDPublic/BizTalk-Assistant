@model RoutingViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Routing</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Source" class="col-md-2 control-label"></label>
            @Html.DropDownListFor(m => m.Source.Id, (SelectList)ViewBag.BusinessProcessSelection, Model.Source.Id)
            <span asp-validation-for="Source" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="ChangeType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ChangeType" class="form-control" />
                <span asp-validation-for="ChangeType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Destination" class="col-md-2 control-label"></label>
            @Html.DropDownListFor(m => m.Destination.Id, (SelectList)ViewBag.BusinessProcessSelection, Model.Destination.Id)
            <span asp-validation-for="Destination" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Active" class="col-md-2 control-label"></label>
            <div class="col-md-offset-2 ">
                <input asp-for="Active" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
